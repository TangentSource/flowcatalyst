{
	"name": "@flowcatalyst/http",
	"version": "0.0.1",
	"description": "HTTP layer utilities for FlowCatalyst platform - Hono middleware, logging, and response handling",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src --ext .ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@flowcatalyst/domain-core": "workspace:*",
		"@flowcatalyst/tsid": "workspace:*",
		"@hono/zod-openapi": "^0.18.4",
		"hono": "^4.6.16",
		"pino": "^9.6.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/node": "^22.10.6",
		"pino-pretty": "^13.0.0",
		"tsup": "^8.5.1",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9"
	},
	"peerDependencies": {
		"hono": ">=4.0.0",
		"pino": ">=9.0.0",
		"zod": ">=3.20.0"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"flowcatalyst",
		"hono",
		"middleware",
		"http",
		"openapi",
		"pino"
	]
}

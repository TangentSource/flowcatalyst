{
	"name": "@flowcatalyst/platform",
	"version": "0.0.1",
	"description": "FlowCatalyst Platform - IAM and Eventing service",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src --ext .ts",
		"typecheck": "tsc --noEmit",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@flowcatalyst/application": "workspace:*",
		"@flowcatalyst/domain-core": "workspace:*",
		"@flowcatalyst/http": "workspace:*",
		"@flowcatalyst/persistence": "workspace:*",
		"@flowcatalyst/platform-crypto": "workspace:*",
		"@flowcatalyst/tsid": "workspace:*",
		"@hono/node-server": "^1.13.8",
		"drizzle-orm": "^0.38.3",
		"hono": "^4.6.16",
		"pino": "^9.6.0",
		"postgres": "^3.4.5",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/node": "^22.10.6",
		"drizzle-kit": "^0.30.1",
		"pino-pretty": "^13.0.0",
		"tsup": "^8.5.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"flowcatalyst",
		"platform",
		"iam",
		"oauth2",
		"oidc"
	]
}
